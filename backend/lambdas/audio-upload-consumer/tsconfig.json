{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true
  }
}
